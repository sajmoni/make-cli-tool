{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "target": "ES2017",
    "module": "commonjs",
    {{ #useInk }}
    "jsx": "react",
    {{ /useInk }}
    "strict": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src"
  ],
}
