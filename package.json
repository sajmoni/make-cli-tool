{
  "name": "make-cli-tool",
  "license": "MIT",
  "version": "0.0.1",
  "description": "A CLI tool to generate javascript libraries",
  "keywords": [],
  "scripts": {
    "build": "rm -rf dist && parcel build src/index.js --no-cache",
    "plop": "plop",
    "release": "yarn clean && yarn build && np",
    "clean": "rm -f make-cli-tool.tgz",
    "go": "./build-test.sh"
  },
  "files": [
    "dist/"
  ],
  "directories": {
    "example": "example"
  },
  "bin": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sajmoni/make-cli-tool.git"
  },
  "prettier": {
    "trailingComma": "all",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "bracketSpacing": true,
    "parser": "typescript"
  },
  "xo": {
    "prettier": true,
    "env": [
      "es2020",
      "node"
    ],
    "rules": {
      "import/no-absolute-path": "off",
      "unicorn/filename-case": "off",
      "capitalized-comments": "off",
      "dot-notation": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "husky": "4.2.3",
    "lint-staged": "10.1.0",
    "np": "6.2.0",
    "parcel": "2.0.0-alpha.3.2",
    "plop": "2.6.0",
    "typescript": "3.8.3",
    "xo": "0.29.1"
  },
  "dependencies": {
    "chalk": "3.0.0",
    "commander": "5.0.0",
    "cross-spawn": "7.0.1",
    "fs-extra": "9.0.0",
    "mustache": "4.0.1"
  }
}
